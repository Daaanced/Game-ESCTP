<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="600" WindowStartupLocation="CenterScreen">
        
    <Canvas x:Name="GameField" KeyDown="NextTurn" Focusable="True">
        <!--<ProgressBar x:Name="Timer" Minimum="0" Maximum="100" Height="10" Width="100" Canvas.Top="20" Canvas.Left="250" Panel.ZIndex="5" Foreground="Red"></ProgressBar>-->
        <Popup x:Name="GameEndMenu" Width="400" Height="300" IsOpen="False" Canvas.Top="75" Canvas.Left="100" Placement="Center" PlacementTarget="{Binding ElementName=GameField}">
            <Border BorderThickness="1">
                <TextBlock Name="myPopupText" Background="Coral" Foreground="Wheat" Padding="30" FontSize="30" TextWrapping="Wrap">
                    Вы проиграли <LineBreak />
                    Ваш счет: <LineBreak />
                    <Button x:Name="NewGameButton" Click="NewGameButtonHandler"> Новая Игра</Button>
                    <Button x:Name="ExitButton" Click="ExitButtonHandler"> Выход</Button>
                </TextBlock>
            </Border>
        </Popup>
    </Canvas>
</Window>
    
