<Window x:Class="WpfApp2.EndGame"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="EndGame" Height="175" Width="200" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="100"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="25*"/>
            <RowDefinition Height="59*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Вы проиграли" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="56,37,0,0" Grid.Column="1" Height="16" Width="88" Grid.RowSpan="2" Grid.ColumnSpan="2" />
        <TextBlock Text="Ваш счёт:" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="56,22,0,0" Grid.Row="1" Grid.Column="1" Height="16" Width="60" Grid.ColumnSpan="2" />
        <StackPanel Margin="0,0,0,100" Grid.RowSpan="2"/>
        <Button x:Name="RestartButton" Content="Новая игра" Grid.Column="1" Margin="10,60,15,15" Grid.Row="1"/>
        <Button x:Name="ExitButton" Content="Выход" Grid.Column="2" Margin="10,60,24,15" Grid.Row="1"/>
    </Grid>

</Window>
